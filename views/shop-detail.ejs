<script>
    const categories = {
        1: 'Category: fruit',
        2: 'Category: vegetable',
        3: 'Category: meat',
        4: 'Category: bread'
    };

    // Get all elements with the class 'categ'
    const categElements = document.querySelectorAll('.categ');

    categElements.forEach(categElement => {
        // Get the category ID from the corresponding hidden input
        const categoryID = categElement.previousElementSibling.value; // Get the value from the hidden input

        // Check if category ID exists in the categories object
        if (categories[categoryID]) {
            categElement.innerText = categories[categoryID]; // Set the inner text to the category
        } else {
            categElement.innerText = "Category not found"; // Fallback message if category ID is invalid
        }
    });
</script>
